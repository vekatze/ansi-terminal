import {
  core.file.descriptor {stdout},
  this.move.make-ansi-kit {make-ansi-kit},
  this.move.perform {perform},
  this.rule.color {Blue, Color-ANSI, Red, Vivid},
  this.rule.color-layer {Foreground},
  this.rule.command {Set-Style},
  this.rule.style {Bold, Color, Normal},
}

define zen(): unit {
  pin k = make-ansi-kit(stdout) in
  perform(k, Set-Style(Color(Foreground, Color-ANSI(Vivid, Red))));
  perform(k, Set-Style(Bold));
  print("error: ");
  perform(k, Set-Style(Normal));
  print("Lorem ipsum dolor sit amet, consectetur adipiscing elit.\n");
  perform(k, Set-Style(Color(Foreground, Color-ANSI(Vivid, Blue))));
  perform(k, Set-Style(Bold));
  print("hint: ");
  perform(k, Set-Style(Normal));
  print("くらきよりくらきみちにぞいりぬべきはるかにてらせやまのはのつき\n")
}

define main(): unit {
  zen()
}
